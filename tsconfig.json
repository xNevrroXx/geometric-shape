{
    "compilerOptions": {
        "noImplicitAny": true,
        "target": "ES2020",
        "module": "NodeNext",
        "useDefineForClassFields": true,
        "declaration": true,
        "outDir": "./dist",
        "sourceMap": true,
        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true
    },
    "exclude": [
        "node_modules", "dist/**/*"
    ],
    "include": [
        "src/**/*"
    ]
}
